{
  "name": "vocabulary-trainer-2",
  "version": "0.0.1",
  "description": "Vocabulary Trainer 2.0 helps you learn a new language.",
  "main": "lib/server.js",
  "scripts": {
    "build": "./node_modules/babel-cli/bin/babel.js src --out-dir lib --plugins transform-react-jsx --presets es2015",
    "bundle": "./node_modules/browserify/bin/cmd.js lib/client.js -o public/js/bundle.js",
    "start": "npm run build && npm run bundle && node lib/server.js"
  },
  "author": "Zsolt Szilagyi",
  "license": "MIT",
  "dependencies": {
    "ejs": "^2.3.4",
    "express": "^4.13.3",
    "react": "^0.14.2",
    "react-dom": "^0.14.2",
    "browserify": "^12.0.1",
    "babel-cli": "^6.1.2",
    "babel-plugin-transform-react-jsx": "^6.0.18",
    "babel-preset-es2015": "^6.1.2"
  }
}
